<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_country"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#333333"
    tools:context="com.example.james.testapp.AddCountryActivity">

    <TextView
        android:text="Add country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/textView"
        android:textSize="56sp"
        android:textColor="#fafafa"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="30dp"
        android:textAlignment="gravity"
        android:gravity="left">

        <TextView
            android:text="Name: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameFieldLabel"
            android:textSize="22sp"
            android:textColor="#fafafa"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:textColor="#fafafa"
            android:textSize="22sp"
            android:id="@+id/countryName"
            android:layout_alignBaseline="@+id/nameFieldLabel"
            android:layout_alignBottom="@+id/nameFieldLabel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Population: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/popFieldLabel"
            android:textSize="22sp"
            android:textColor="#fafafa"
            android:layout_marginTop="38sp"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text=""
            android:ems="10"
            android:textColor="#fafafa"
            android:textSize="22sp"
            android:id="@+id/popField"
            android:layout_alignBaseline="@+id/popFieldLabel"
            android:layout_alignBottom="@+id/popFieldLabel"
            android:inputType="number"
            android:layout_toRightOf="@+id/popFieldLabel" />

        <TextView
            android:text="Area: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/areaFieldLabel"
            android:textSize="22sp"
            android:textColor="#fafafa"
            android:layout_marginTop="78sp"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text=""
            android:ems="10"
            android:textColor="#fafafa"
            android:textSize="22sp"
            android:id="@+id/areaField"
            android:layout_alignBaseline="@+id/areaFieldLabel"
            android:layout_alignBottom="@+id/areaFieldLabel"
            android:inputType="number"
            android:layout_toRightOf="@+id/areaFieldLabel" />

        <Button
            android:text="Add new country"
            android:layout_width="300dp"
            android:layout_marginTop="125dp"
            android:id="@+id/button3"
            android:layout_height="75dp"
            android:layout_below="@+id/button2"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2"
            android:onClick="submitAddCountry" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results"
            android:textSize="22sp"
            android:textColor="#fafafa"
            android:layout_marginTop="230sp"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</RelativeLayout>
