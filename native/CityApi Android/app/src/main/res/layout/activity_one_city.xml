<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_one_city"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.james.testapp.OneCityActivity"
    android:background="#333333">

    <TextView
        android:text="City profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/textView"
        android:textSize="56sp"
        android:textColor="#fafafa"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="0dp"
        android:textAlignment="gravity"
        android:gravity="left">

        <TextView
            android:text="Name: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameFieldLabel"
            android:textSize="22sp"
            android:textColor="#fafafa"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text=""
            android:ems="10"
            android:textColor="#fafafa"
            android:textSize="22sp"
            android:id="@+id/name"
            android:layout_alignBaseline="@+id/nameFieldLabel"
            android:layout_alignBottom="@+id/nameFieldLabel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/country"
            android:layout_alignStart="@+id/country" />

        <TextView
            android:text="Country: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countryFieldLabel"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:textColor="#fafafa"
            android:layout_below="@+id/nameFieldLabel"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text=""
            android:ems="10"
            android:textColor="#fafafa"
            android:textSize="22sp"
            android:id="@+id/country"
            android:layout_alignBaseline="@+id/countryFieldLabel"
            android:layout_alignBottom="@+id/countryFieldLabel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/popFieldLabel"
            android:layout_toEndOf="@+id/popFieldLabel" />

        <TextView
            android:text="Population: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/popFieldLabel"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:textColor="#fafafa"
            android:layout_below="@+id/countryFieldLabel"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text=""
            android:ems="10"
            android:textColor="#fafafa"
            android:textSize="22sp"
            android:id="@+id/population"
            android:layout_alignBaseline="@+id/popFieldLabel"
            android:layout_alignBottom="@+id/popFieldLabel"
            android:layout_toRightOf="@+id/popFieldLabel"
            android:layout_toEndOf="@+id/popFieldLabel" />

        <TextView
            android:text="Category: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/catFieldLabel"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:textColor="#fafafa"
            android:layout_below="@+id/popFieldLabel"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text=""
            android:ems="10"
            android:textColor="#fafafa"
            android:textSize="22sp"
            android:id="@+id/category"
            android:layout_alignBaseline="@+id/catFieldLabel"
            android:layout_alignBottom="@+id/catFieldLabel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/popFieldLabel"
            android:layout_toEndOf="@+id/popFieldLabel" />

        <Button
            android:text="Submit changes"
            android:layout_width="330dp"
            android:layout_marginTop="25dp"
            android:id="@+id/submitButton"
            android:layout_height="75dp"
            android:layout_below="@+id/catFieldLabel"
            android:onClick="submitChanges"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Delete city"
            android:layout_width="330dp"
            android:layout_marginTop="20dp"
            android:id="@+id/deleteButton"
            android:layout_height="75dp"
            android:layout_below="@+id/submitButton"
            android:onClick="submitDelete"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:textColor="#fafafa"
            android:layout_below="@+id/deleteButton"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</RelativeLayout>