<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#333333"
    tools:context="com.example.james.testapp.DisplayLocationActivity">

    <TextView
        android:text="Get location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/textView"
        android:textSize="56sp"
        android:textColor="#fafafa"
        android:onClick="onButtonClick"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Please wait while your\n location is fetched..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/results"
        android:textSize="22sp"
        android:textColor="#fafafa"
        android:layout_marginTop="150sp"
        android:gravity="left"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="REFRESH LOCATION"
        android:layout_width="250dp"
        android:layout_marginTop="250dp"
        android:id="@+id/refresh"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:onClick="runRefresh"/>

    <Button
        android:text="ADD CITY"
        android:layout_width="250dp"
        android:layout_marginTop="335dp"
        android:id="@+id/submitAddCity"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:onClick="submitAddCity"/>

</RelativeLayout>
