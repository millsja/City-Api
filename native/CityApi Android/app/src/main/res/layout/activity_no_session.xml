<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_no_session"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.james.testapp.NoSessionActivity"
    android:background="#333333">

        <TextView
            android:text="Log in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:id="@+id/textView"
            android:textSize="56sp"
            android:textColor="#fafafa"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="0dp"
        android:textAlignment="gravity"
        android:gravity="left">

        <TextView
            android:text="Email: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailFieldLabel"
            android:textSize="22sp"
            android:textColor="#fafafa"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:text=""
            android:ems="10"
            android:textColor="#fafafa"
            android:textSize="22sp"
            android:id="@+id/email"
            android:layout_alignBaseline="@+id/emailFieldLabel"
            android:layout_alignBottom="@+id/emailFieldLabel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Password: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passwdFieldLabel"
            android:layout_marginTop="45dp"
            android:textSize="22sp"
            android:textColor="#fafafa"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:text=""
            android:ems="10"
            android:textColor="#fafafa"
            android:textSize="22sp"
            android:id="@+id/passwd"
            android:layout_alignBaseline="@+id/passwdFieldLabel"
            android:layout_alignBottom="@+id/passwdFieldLabel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Submit"
            android:layout_width="330dp"
            android:layout_marginTop="20dp"
            android:id="@+id/logInButton"
            android:layout_height="75dp"
            android:layout_below="@+id/passwdFieldLabel"
            android:onClick="submitLogin"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results"
            android:layout_marginTop="15dp"
            android:textSize="22sp"
            android:textColor="#fafafa"
            android:layout_below="@+id/logInButton"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="If you don't already have\nan account: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerFieldLabel"
            android:layout_marginTop="15dp"
            android:textSize="22sp"
            android:textColor="#fafafa"
            android:layout_below="@+id/results"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Register"
            android:layout_width="330dp"
            android:layout_marginTop="15dp"
            android:id="@+id/button3"
            android:layout_height="75dp"
            android:layout_below="@+id/registerFieldLabel"
            android:layout_centerHorizontal="true"
            android:onClick="gotoRegister" />

    </RelativeLayout>

</RelativeLayout>
